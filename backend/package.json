{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "babel src/ -d build",
    "dev": "cross-env NODE_ENV=development nodemon -x babel-node -r dotenv/config src/server.js",
    "lint": "eslint .",
    "start": "node -r dotenv/config build/server.js",
    "test": "jest --watchAll",
    "test:ci": "jest --ci --collectCoverage --passWithNoTests"
  },
  "eslintConfig": {
    "env": {
      "jest/globals": true,
      "node": true
    },
    "extends": [
      "airbnb-base"
    ],
    "plugins": [
      "jest"
    ],
    "rules": {
      "import/prefer-default-export": "off"
    }
  },
  "jest": {
    "transform": {
      "\\.js$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/*/*.js"
    ]
  },
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "http-status": "^1.5.2",
    "lodash": "^4.17.21",
    "mysql2": "^2.3.3",
    "pino": "^8.0.0",
    "pino-http": "^8.0.1",
    "pino-pretty": "^9.1.1",
    "sequelize": "^6.21.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.2",
    "@babel/node": "^7.20.2",
    "@babel/plugin-transform-strict-mode": "^7.18.6",
    "@babel/preset-env": "^7.20.2",
    "babel-jest": "^29.3.1",
    "eslint-plugin-jest": "^26.5.3",
    "jest": "^28.1.1",
    "nodemon": "^2.0.16",
    "sqlite3": "^5.0.8",
    "supertest": "^6.2.3"
  }
}
